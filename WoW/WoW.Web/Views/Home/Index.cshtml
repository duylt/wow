@model WoW.Core.Challenge
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    int dayth = 0;
}
@section AdditionalPageHead {

    @Styles.Render("~/WOW/PostingCSS")


    <style type="text/css">
        .panel {
            background-color: rgba(0, 0, 0, 0.13) !important;
        }

        .pricing-table .panel-heading .caption {
            color: #7f7f7f;
        }

        .caption-message {
            font-size: 20px;
        }

        .caption {
            color: white;
        }
    </style>
}

<div class="row">
    <div>

        <div class="panel-title pan text-center">
            <div class="caption-message">Please be one time !</div>
        </div>

        <div class="panel">
            <div class="panel-heading">
                <div class="caption" style="color:white">Wake Up At</div>
            </div>
            <div class="panel-body pan text-center">
                <div class="the-price">
                    <h1 style="  font-size: 98px;">
                        @Model.WakeUpTime.Value.Hours.ToString("00") : @Model.WakeUpTime.Value.Minutes.ToString("00")
                    </h1>
                </div>
            </div>
            <div class="panel-footer pal">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-12 col-md-12 text-center">
                            @{
                                var archieveDay = Model.ChallegeDays.Count == 0 ? 0 : Model.ChallegeDays.Count;
                                        var remainDay = Model.Duration - archieveDay;
                            }
                            <button class="btn btn-success btn-block" style="word-wrap: break-word">You have passed @archieveDay days, just @remainDay remaining days to change your habit</button>
                            <p>
                                You can only complete your daily challenge from
                                @{
                                    var settingTime = DateTime.Now.Date;
                                    settingTime = settingTime.AddHours(Model.WakeUpTime.Value.Hours);
                                    settingTime = settingTime.AddMinutes(Model.WakeUpTime.Value.Minutes);

                                }
                                <span>@settingTime.AddHours(-1).ToString("HH:mm")</span>
                                -
                                <span>@settingTime.AddMinutes(10).ToString("HH:mm")</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/WOW/PostingJS")
}
<script>
    jQuery(document).ready(function () {
        form_validation.init();
        form_picker.init();
    });
</script>