@model WoW.Core.Challenge
@{
    ViewBag.Title = "Complete Challenge";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section AdditionalPageHead {

    @Styles.Render("~/WOW/PostingCSS")
    <style type="text/css">
        .panel {
            background-color: rgba(0, 0, 0, 0.13) !important;
        }

        .pricing-table .panel-heading .caption {
            color: #f05f40;
        }
    </style>
}
@{
    var settingTime = DateTime.Now.Date;
    settingTime = settingTime.AddHours(Model.WakeUpTime.Value.Hours);
    settingTime = settingTime.AddMinutes(Model.WakeUpTime.Value.Minutes);
}
<!--BEGIN PAGE WRAPPER-->

<div class="content">
    <div class="demo-form-component">
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <div class="pricing-table">
                            <div class="row mtl">
                                <div class="col-xs-12 col-md-6 col-lg-8 col-md-offset-2">
                                    <div class="panel">
                                        <div class="panel-heading">
                                            <div class="caption">Mission Accomplished</div>
                                        </div>
                                        <div class="panel-body pan text-center">
                                            <div class="the-price">
                                                <h1>
                                                    @Model.WakeUpTime.Value.Hours.ToString():@Model.WakeUpTime.Value.Minutes.ToString()
                                                </h1>
                                            </div>
                                        </div>
                                        <div class="panel-footer pal">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="col-xs-12 col-md-12 text-center">
                                                            <a href="@Url.Action("Statistics", "Home")" role="button" class="btn btn-success btn-circle btn-xl">
                                                                COMPLETED
                                                            </a>
                                                            @*<a href="@Url.Action("Waste","Home")" role="button" class="btn btn-primary">WASTE</a>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/WOW/PostingJS")
}
<script>
    jQuery(document).ready(function () {
        form_validation.init();
        form_picker.init();
    });
</script>
