@model WoW.Core.User

@{
    ViewBag.Title = "CreateChallenge";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var donations = ViewBag.Donations;
}


@section AdditionalPageHead {

    @Styles.Render("~/WOW/PostingCSS")

    <style type="text/css">
        
        .pricing-table .panel-heading .caption {
            color: #7f7f7f;
        }

        .caption-message {
            font-size: 20px;
        }
    </style>
}


<!--END TITLE & BREADCRUMB PAGE-->
<div class="box-content">
    <!--BEGIN CONTENT-->
    <div class="content">
        <div class="demo-form-component">
            <div class="row">
                <div class="col-md-8 col-lg-offset-2">
                    <div class="panel" style="background: #fff;">
                        <div class="panel-heading">
                            <div class="caption" style="color:#333;">Post on FB</div>
                        </div>
                        <div class="panel-body">
                            <div id="viewcode-advance-form-script" class="viewcode-example">
                                <form id="advance-form" method="post" class="form-horizontal" novalidate="novalidate" action="CreateChallenge">
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Time</label>
                                        <div class="col-lg-9">
                                            <!--BEGIN HTML-->
                                            <div class="input-group bootstrap-timepicker">
                                                <input type="text" class="timepicker-default form-control" name="WakeUpTime">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </span>
                                            </div>
                                            <!--END HTML-->
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Duration</label>
                                        <div class="col-lg-9">
                                            <p style="margin: 0; padding: 0; text-align: left; color: #333; font-size: 13px;">
                                                <label for="amount" style="display: inline-block;">Maximum Challenge Days:</label>&nbsp;
                                                <input type="text" id="amount-max" style="border: 0; font-weight: bold;" class="text-primary" name="Duration">
                                            </p>
                                            <div id="slider-range-max" class="slider ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all" aria-disabled="false">
                                                <div class="ui-slider-range ui-widget-header ui-corner-all ui-slider-range-max" style="width: 88.8888888888889%;"></div>
                                                <a class="ui-slider-handle ui-state-default ui-corner-all ui-state-hover" href="#" style="left: 11.1111111111111%;"></a>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Donate To</label>
                                        <div class="col-lg-9">
                                            <select name="DonationId" class="form-control">
                                                <option value="">-- Select donate --</option>
                                                @if (donations != null)
                                                {
                                                    foreach (var donation in donations)
                                                    {
                                                        <option value="@donation.Id">@donation.Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Amount</label>
                                        <div class="col-lg-9">
                                            <select name="DonationAmount" class="form-control">
                                                <option value="">-- Select an amount --</option>
                                                <option value="1">1 $USD</option>
                                                <option value="2">2 $USD</option>
                                                <option value="5">5 $USD</option>
                                                <option value="10">10 $USD</option>
                                                <option value="50">50 $USD</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12 text-right">
                                            <button type="submit" class="btn btn-info">Start</button>
                                        </div>
                                    </div>
                                </form>
                                <a href="javascript:;" class="btn-view-code" style="display: none;"><i class="fa fa-code"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--END CONTENT-->
</div>

<!--END PAGE WRAPPER-->
@section Scripts
{
    @Scripts.Render("~/WOW/PostingJS")
}
<script>
    jQuery(document).ready(function () {
        form_validation.init();
        form_picker.init();
    });
</script>